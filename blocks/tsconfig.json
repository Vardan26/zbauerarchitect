{
    "compilerOptions": {
      "target": "ES6",
      "lib": ["DOM", "ES6"],
      "jsx": "react-jsx",
      "module": "ESNext",
      "moduleResolution": "Node",
      "esModuleInterop": true,
      "strict": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "noEmit": false,
      "allowJs": true,
      "resolveJsonModule": true,
      "outDir": "build"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "build"]
  }